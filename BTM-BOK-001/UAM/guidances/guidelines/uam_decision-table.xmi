            &lt;/td>&#xD;
            &lt;td>&#xD;
                condition b1&#xD;
            &lt;/td>&#xD;
            &lt;td>&#xD;
                condition b2&#xD;
            &lt;/td>&#xD;
            &lt;td>&#xD;
                condition b1&#xD;
            &lt;/td>&#xD;
            &lt;td>&#xD;
