  <org.eclipse.epf.uma:DescriptorDescription xmi:id="-ISwVLURFt1u-6VXWZoSvUw" name="New Task Descriptor,__xqbULICEeSgVPmVL1L5GQ" guid="-ISwVLURFt1u-6VXWZoSvUw">
