<org.eclipse.epf.uma:ArtifactDescription xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:org.eclipse.epf.uma="http://www.eclipse.org/epf/uma/1.0.6/uma.ecore" xmlns:epf="http://www.eclipse.org/epf" epf:version="1.5.1" xmlns:rmc="http://www.ibm.com/rmc" rmc:version="7.5.1" xmi:id="-HNrBUMZSphbOkOWCYbIr3A" name="uam_problem-report,_56ujIGOgEeSFL7Sh0MlmKA" guid="-HNrBUMZSphbOkOWCYbIr3A" authors="DW Enstrom " changeDate="2014-11-03T16:37:18.324-0500" version="2.0.1">
