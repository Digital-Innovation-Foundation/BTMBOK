  </org.eclipse.epf.uma:DescriptorDescription>
  <org.eclipse.epf.uma:DescriptorDescription xmi:id="-Fdu6tOnU95Xi-_uApb8QsA" name="uam_business_zone,_8cp7eMDFEemeq73CiHUqkw" guid="-Fdu6tOnU95Xi-_uApb8QsA">
